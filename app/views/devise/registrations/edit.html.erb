<%= link_to "Voltar", :back %>

<h2>Editar meus dados</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :Nome %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>


  <div class="field">
    <%= f.label :Nova_senha %> <i>(deixe em branco se não quiser alterar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em>mínimo de <%= @minimum_password_length %> digitos</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :Confirme_nova_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :Digite_sua_senha_atual %> <i>(Digite sua senha atual para confirmar suas alterações)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
