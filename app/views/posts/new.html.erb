<h1>Crie seu post</h1>

<%= form_with(model: @post, local: true) do |form| %>
    <div class="field">
       <%= form.label :Titulo %>
       <div>
       <%= form.text_field :title, id: :post_title %>
       </div>
    </div>
   
    <div class="field">
       <%= form.label :Descrição %>
       <div>
       <%= form.text_area :content, id: :post_content %>
       </div>
    </div>
   
    <div class="actions">
       <%= form.submit %>
    </div>
   <% end %>
   